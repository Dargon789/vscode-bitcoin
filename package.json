{
  "name": "bitcoin",
  "displayName": "Bitcoin",
  "description": "Tools for working with Bitcoin (BSV)",
  "publisher": "Satchmo",
  "version": "0.0.8",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rohenaz/vscode-bitcoin.git"
  },
  "activationEvents": [
    "onCommand:bitcoin.generatePublicKey",
    "onCommand:bitcoin.generatePrivateKey",
    "onCommand:bitcoin.generateWIF",
    "onCommand:bitcoin.addressFromPublicKey",
    "onCommand:bitcoin.addressFromPrivateKey",
    "onCommand:bitcoin.addressFromWIF",
    "onCommand:bitcoin.getTx",
    "onCommand:bitcoin.publicKeyFromPrivateKey"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "bitcoin.addressFromWIF",
        "title": "Address from WIF"
      },
      {
        "command": "bitcoin.addressFromPublicKey",
        "title": "Address from Public Key"
      },
      {
        "command": "bitcoin.addressFromPrivateKey",
        "title": "Address From Private Key"
      },
      {
        "command": "bitcoin.generatePublicKey",
        "title": "Generate Public Key"
      },
      {
        "command": "bitcoin.generatePrivateKey",
        "title": "Generate Private Key"
      },
      {
        "command": "bitcoin.generateWIF",
        "title": "Generate WIF"
      },
      {
        "command": "bitcoin.getTx",
        "title": "Fetch a Tx by Transaction ID"
      },
      {
        "command": "bitcoin.publicKeyFromPrivateKey",
        "title": "Public Key From Private Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "vscode-test": "^1.4.0",
    "ts-loader": "^7.0.5",
    "typescript": "^4.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.7",
    "bsv": "^2.0.0-beta.42",
    "node-fetch": "^2.6.1"
  }
}
